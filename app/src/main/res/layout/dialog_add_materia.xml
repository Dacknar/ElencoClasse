<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/dialog_bg_add_materia">

        <TextView
            android:id="@+id/txtInserireMateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Inserire Materia"
            android:textColor="#000000"
            android:textSize="35sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            android:background="@drawable/dialog_edt_add_materia">

            <EditText
                android:id="@+id/edtMateria"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#00000000"
                android:ems="12"
                android:paddingLeft="5dp"
                tools:text="Materia" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnConfermaMateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/dialog_btn_add_materia"
            android:text="Conferma" />

        <Button
            android:id="@+id/btnAnullaMateria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnConfermaMateria"
            android:layout_marginStart="35dp"
            android:background="@drawable/dialog_btn_add_materia"
            android:text="Anulla" />
    </RelativeLayout>
</RelativeLayout>