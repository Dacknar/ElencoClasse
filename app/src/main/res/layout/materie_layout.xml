<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mat_layout"
    android:layout_width="match_parent"
    android:layout_height="68sp"
    android:layout_marginTop="5sp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtInserireMateriaRL">
        <TextView
            android:id="@+id/txtMateria"
            android:layout_width="318dp"
            android:layout_height="58sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/style_txt_elencomaterie"
            android:paddingTop="8sp"
            android:text="lorem ipsum"
            android:textAlignment="center"
            android:textSize="30sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txtInserireMateriaRL">
        <Button
            android:id="@+id/btnRimuovi"
            android:layout_width="63dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/style_button_elencomaterie"
            android:text="-"
            android:textAlignment="center"
            android:textSize="50sp" />
    </RelativeLayout>

</RelativeLayout>